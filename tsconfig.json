{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "lib/components/apps/project-manager/MainPanel.jsx", "lib/components/apps/project-manager/AddProjectModal.jsx", "lib/components/apps/project-manager/ProjectInfo.jsx", "lib/components/apps/project-manager/Sidebar.jsx", "lib/components/apps/project-manager/TaskView.jsx"],
  "exclude": ["node_modules"]
}
