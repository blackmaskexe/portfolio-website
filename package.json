{
  "name": "react-macos-desktop",
  "version": "0.1.4",
  "private": false,
  "description": "a macos-simulator component that can be used to display applications that open up either as macos application windows or ios simulator window in macos. Useful for showcasing projects, etc in your portfolios",
  "author": "blackmaskexe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackmaskexe/react-macos-desktop.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "next dev",
    "build-app": "next build",
    "start": "next start",
    "lint": "next lint",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && babel lib --out-dir dist --ignore 'lib/styles/*.css' --copy-files --config-file ./babel.config.lib.json --extensions \".ts,.tsx,.js,.jsx\" && npm run build:css",
    "build:css": "tailwindcss -c tailwind.config.lib.js -i lib/styles/component-styles.css -o dist/styles.css --minify",
    "test-package": "node test-package-structure.js",
    "test-final": "node test-package-final.js",
    "prepublishOnly": "npm run build && npm run test-final",
    "link-local": "npm link",
    "unlink-local": "npm unlink"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=3"
  },
